{
    "i18n": true,
    "type": "tabs",
    "items": {
        "_options": {
            "type": "panel",
            "label": "Options",
            "items": {
                "serverIp": {
                    "type": "text",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Server",
                    "help": "IP or hostname of your Gira X1 or HomeServer"
                },
                "serverPort": {
                    "type": "number",
                    "min": 1,
                    "max": 65535,
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Port"
                },
                "userName": {
                    "newLine": true,
                    "type": "text",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Username"
                },
                "userPassword": {
                    "type": "password",
                    "repeat": false,
                    "visible": false,
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Password"
                },
                "createRoomsAndFunctions": {
                    "newLine": true,
                    "type": "checkbox",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Create rooms and functions automatically"
                },
                "_headerOptionsWebSettings": {
                    "newLine": true,
                    "type": "header",
                    "text": "Url settings",
                    "size": 3,
                    "sm": 12,
                    "md": 12,
                    "lg": 12
                },
                "webInstance": {
                    "newLine": true,
                    "type": "instance",
                    "adapter": "web",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Web adapter instance"
                },
                "_webInstanceUrl": {
                    "type": "textSendTo",
                    "container": "text",
                    "copyToClipboard": false,
                    "alsoDependsOn": [
                        "webInstance",
                        "webCustomUrlActive",
                        "webCustomUrl"
                    ],
                    "command": "getWebUrl",
                    "jsonData": "{\"webInstance\": \"${data.webInstance}\", \"webCustomUrlActive\": ${!!data.webCustomUrlActive}, \"webCustomUrl\": \"${data.webCustomUrl}\"}",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Url preview",
                    "help": "Your server will use this url to communicate with ioBroker"
                },
                "webCustomUrlActive": {
                    "newLine": true,
                    "type": "checkbox",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Use custom url for web binding"
                },
                "webCustomUrl": {
                    "hidden": "!data.webCustomUrlActive",
                    "type": "text",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Custom web url",
                    "help": "Hostname or ip address"
                },
                "_headerOptionsSupport": {
                    "newLine": true,
                    "type": "header",
                    "text": "Support this project",
                    "size": 3,
                    "sm": 12,
                    "md": 12,
                    "lg": 12
                },
                "_ioBrokerKursBanner": {
                    "newLine": true,
                    "type": "staticImage",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "href": "https://haus-automatisierung.com/iobroker-kurs/?refid=iobroker-gira-iot",
                    "src": "https://haus-automatisierung.com/images/ads/ioBroker-Kurs.png"
                }
            }
        }
    }
}